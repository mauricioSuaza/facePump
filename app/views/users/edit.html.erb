<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Edit Profile</h3>
    <br>
    <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'Full name' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'email@example.com' %>
      </div>
      <label for="">Profile picture</label>
      <div class="field">

        <%= f.label :avatar do %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
    <br>

  </div>
</div>
